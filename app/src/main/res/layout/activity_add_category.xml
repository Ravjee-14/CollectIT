<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="AddCategoryActivity"
    android:paddingLeft="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/grey"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/collectit_header" />

        <TextView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Home"
            android:textSize="12dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/signOut"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sign Out"
            android:textSize="12dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvCreateCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="arial"
        android:text="@string/Create_Categories"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:paddingTop="40dp"/>


    <Space
        android:layout_width="10dp"
        android:layout_height="70dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="arial"
            android:text="Category Name"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Name of Category"
            android:ems="10"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="10dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="arial"
            android:text="Item Goal"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edItemGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="15"
            android:inputType="phone" />

        <Button
            android:id="@+id/btnAddCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/grey"
            android:checkable="false"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_plus"
            android:text="Add" />


    </LinearLayout>


</LinearLayout>